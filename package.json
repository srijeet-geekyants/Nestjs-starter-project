{
  "name": "backend",
  "version": "1.0.0",
  "description": "This contains the base setup for the nestjs application with common modules",
  "author": "Suresh Konakanchi",
  "private": true,
  "license": "MIT",
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "setup": "node scripts/setup.js",
    "setup:force": "node scripts/setup.js --force",
    "env:setup": "node scripts/setup.js",
    "env:force": "node scripts/setup.js --force",
    "copy:assets": "pnpx cpy \"views/**/*\" \"assets/**/*\" --parents --cwd=. dist",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "build:api": "nest build && pnpm run copy:assets",
    "build:worker": "tsc -p tsconfig.build.json",
    "build": "pnpm exec concurrently --names \"API,WORKER\" --prefix-colors \"cyan,magenta\" \"pnpm run build:api\" \"pnpm run build:worker\"",
    "api:start": "nest start",
    "api:start:dev": "nest start --watch",
    "api:start:debug": "nest start --debug --watch",
    "api:start:prod": "node dist/main",
    "worker:start": "pnpm exec ts-node -r tsconfig-paths/register src/worker.main.ts",
    "worker:start:dev": "pnpm exec ts-node-dev -r tsconfig-paths/register --respawn src/worker.main.ts",
    "worker:start:prod": "node dist/worker.main.js",
    "start": "pnpm exec concurrently --names \"API,WORKER\" --prefix-colors \"cyan,magenta\" \"pnpm run api:start\" \"pnpm run worker:start\"",
    "start:dev": "pnpm exec concurrently --names \"API,WORKER\" --prefix-colors \"cyan,magenta\" \"pnpm run api:start:dev\" \"pnpm run worker:start:dev\"",
    "start:prod": "pnpm exec concurrently --names \"API,WORKER\" --prefix-colors \"cyan,magenta\" \"pnpm run api:start:prod\" \"pnpm run worker:start:prod\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:check": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "test": "jest --config jest.config.ts",
    "test:watch": "jest --config jest.config.ts --watch",
    "test:coverage": "jest --config jest.config.ts --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "NODE_ENV=development jest --config jest.e2e.config.ts",
    "test:e2e-coverage": "NODE_ENV=development jest --config jest.e2e.config.ts --coverage",
    "test:playwright": "playwright test",
    "test:playwright:ui": "playwright test --ui",
    "test:playwright:debug": "playwright test --debug",
    "test:playwright:headed": "playwright test --headed",
    "test:playwright:unit": "playwright test --project=unit-tests",
    "test:playwright:functional": "playwright test --project=functional-tests",
    "test:playwright:e2e": "playwright test --project=e2e-tests",
    "test:playwright:report": "playwright show-report",
    "test:playwright:install": "playwright install",
    "test:artillery": "artillery run artillery/artillery.yml",
    "test:artillery:health": "artillery run artillery/scenarios/health-check.yml",
    "test:artillery:metrics": "artillery run artillery/scenarios/metrics.yml",
    "test:artillery:dev-tools": "artillery run artillery/scenarios/dev-tools.yml",
    "test:artillery:workflow": "artillery run artillery/scenarios/complete-workflow.yml",
    "test:artillery:stress": "artillery run artillery/scenarios/stress-test.yml",
    "test:artillery:quick": "artillery quick --count 10 --num 5 http://localhost:3000/v1/health",
    "test:artillery:report": "artillery run artillery/artillery.yml --output artillery-report.json && artillery report artillery-report.json",
    "allow:permission": "sudo chmod -R 777 ./data",
    "generate:prometheus": "node scripts/generate-prometheus.js",
    "db:dev:rm": "docker-compose down --volumes --remove-orphans",
    "db:dev:up": "docker-compose up -d",
    "generate:openapi-spec": "curl http://localhost:3000/api-json -o openapi.json",
    "prisma:dev:deploy": "pnpx prisma migrate deploy --schema=./src/db/prisma/schema.prisma",
    "prisma:local:up": "pnpm run prisma:dev:deploy && pnpm run prisma:dbpull && pnpm run prisma:generate",
    "prisma:migrate": "pnpx prisma migrate dev --schema=./src/db/prisma/schema.prisma",
    "prisma:new-migration": "pnpx prisma migrate dev --schema=./src/db/prisma/schema.prisma --create-only",
    "prisma:reset": "pnpx prisma migrate reset --schema=./src/db/prisma/schema.prisma --force",
    "prisma:dbpull": "pnpx prisma db pull --schema=./src/db/prisma/schema.prisma",
    "prisma:studio": "pnpx dotenv-cli -e .env -- pnpx prisma studio --schema=./src/db/prisma/schema.prisma",
    "prisma:generate": "pnpx prisma generate --schema=./src/db/prisma/schema.prisma",
    "prisma:setup": "pnpm run prisma:migrate && pnpm run prisma:dbpull && pnpm run prisma:generate",
    "prisma:migrate-dbpull": "pnpm run prisma:migrate && pnpm run prisma:dbpull",
    "local:up": "pnpm run generate:prometheus && pnpm run db:dev:up && sleep 5 && pnpm run prisma:setup && pnpm run start:dev",
    "local:dev:up": "pnpm run generate:prometheus && pnpm run db:dev:up && sleep 5 && pnpm run prisma:reset && pnpm run prisma:local:up && pnpm run start:dev",
    "clean": "rimraf dist coverage",
    "clean:all": "rimraf dist coverage node_modules pnpm-lock.yaml",
    "type-check": "tsc --noEmit",
    "pre-commit": "pnpm run type-check && pnpm run lint:check && pnpm run test",
    "postinstall": "pnpm run prisma:generate"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "3.892.0",
    "@aws-sdk/client-sns": "3.891.0",
    "@aws-sdk/s3-request-presigner": "3.892.0",
    "@bull-board/api": "6.12.7",
    "@bull-board/express": "6.12.7",
    "@bull-board/nestjs": "6.12.7",
    "@nestjs/bullmq": "11.0.3",
    "@nestjs/cache-manager": "3.0.1",
    "@nestjs/common": "11.1.6",
    "@nestjs/config": "4.0.2",
    "@nestjs/core": "11.1.6",
    "@nestjs/devtools-integration": "0.2.1",
    "@nestjs/event-emitter": "3.0.1",
    "@nestjs/jwt": "11.0.0",
    "@nestjs/platform-express": "11.1.6",
    "@nestjs/schedule": "6.0.1",
    "@nestjs/serve-static": "5.0.3",
    "@nestjs/swagger": "11.2.0",
    "@nestjs/terminus": "11.0.0",
    "@nestjs/throttler": "6.4.0",
    "@opentelemetry/api": "1.9.0",
    "@opentelemetry/auto-instrumentations-node": "0.64.1",
    "@opentelemetry/context-async-hooks": "2.1.0",
    "@opentelemetry/exporter-trace-otlp-proto": "0.205.0",
    "@opentelemetry/resources": "2.1.0",
    "@opentelemetry/sdk-node": "0.205.0",
    "@prisma/client": "6.16.2",
    "@willsoto/nestjs-prometheus": "6.0.2",
    "bcrypt": "6.0.0",
    "body-parser": "2.2.0",
    "bullmq": "5.58.6",
    "cache-manager": "7.2.0",
    "cache-manager-redis-store": "3.0.1",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.2",
    "cloudinary": "2.7.0",
    "dotenv-cli": "10.0.0",
    "fs-extra": "11.3.2",
    "helmet": "8.1.0",
    "ioredis": "5.7.0",
    "joi": "18.0.1",
    "nest-winston": "1.10.2",
    "opossum": "9.0.0",
    "path": "0.12.7",
    "pg": "8.16.3",
    "prom-client": "15.1.3",
    "pug": "3.0.3",
    "reflect-metadata": "0.2.2",
    "rimraf": "6.0.1",
    "rxjs": "7.8.2",
    "sanitize-html": "2.17.0",
    "ua-parser-js": "1.0.41",
    "uuid": "8.3.2",
    "winston": "3.17.0",
    "winston-daily-rotate-file": "5.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "11.0.10",
    "@nestjs/schematics": "11.0.7",
    "@nestjs/testing": "11.1.6",
    "@playwright/test": "1.55.0",
    "@types/bcrypt": "6.0.0",
    "@types/body-parser": "1.19.6",
    "@types/express": "5.0.3",
    "@types/fs-extra": "11.0.4",
    "@types/jest": "30.0.0",
    "@types/multer": "2.0.0",
    "@types/node": "24.5.2",
    "@types/opossum": "8.1.9",
    "@types/pg": "8.15.5",
    "@types/sanitize-html": "2.16.0",
    "@types/supertest": "6.0.3",
    "@types/ua-parser-js": "0.7.39",
    "@types/uuid": "8.3.4",
    "@typescript-eslint/eslint-plugin": "8.44.0",
    "@typescript-eslint/parser": "8.44.0",
    "artillery": "1.5.0",
    "concurrently": "6.1.0",
    "cpy-cli": "6.0.0",
    "dotenv": "17.2.2",
    "envsub": "4.1.0",
    "eslint": "9.35.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-prettier": "5.5.4",
    "jest": "30.1.3",
    "playwright": "1.55.0",
    "prettier": "3.6.2",
    "prisma": "6.16.2",
    "source-map-support": "0.5.21",
    "supertest": "7.1.4",
    "ts-jest": "29.4.3",
    "ts-loader": "9.5.4",
    "ts-node": "10.9.2",
    "ts-node-dev": "2.0.0",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.9.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
